<h2><%= @list.name %></h2>
<h3><% list_bookmarks = @list.bookmarks %></h3>
<ul>
  <% list_bookmarks.each do |bookmark| %>
    <li><%= bookmark.movie.title %></li>
    <li><%= bookmark.movie.overview %></li>
    <li><%= bookmark.movie.poster_url %></li>
    <li><%= bookmark.movie.rating %></li>
    <li><%= bookmark.comment %></li>
    <li><%= link_to 'Delete', bookmark_path(bookmark), method: :delete, data: { confirm: "Are you sure?" }%></li>
  <% end %>
</ul>


<h3><%= link_to 'Back to lists', lists_path %> </h3>
<h3><%= link_to 'Add a bookmark', new_list_bookmark_path(@list) %> </h3>


